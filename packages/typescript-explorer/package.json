{
  "name": "typescript-explorer",
  "displayName": "Typescript Explorer",
  "description": "Explore typescript types",
  "publisher": "mxsdev",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "TypeScript Explorer",
      "properties": {
        "typescript-explorer.expandedHover": {
          "title": "Expanded Hover",
          "type": "boolean",
          "default": false,
          "description": "Show entire expanded type on hovering"
        }
      }
    },
    "commands": [
      {
        "title": "Toggle Expanded Type on Hover",
        "command": "typescript-explorer.toggleExpandedHover",
        "category": "TypeScript Explorer"
      }
    ],
    "typescriptServerPlugins": [
      {
        "name": "@ts-expand-type/typescript-explorer-tsserver",
        "enableForWorkspaceTypeScriptVersions": true
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@ts-expand-type/typescript-explorer-tsserver": "*",
    "@ts-expand-type/api": "*"
  },
  "devDependencies": {
    "@types/vscode": "^1.71.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.8.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
